<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0">

  <!-- 1. Core Properties -->
  <Id>705e2315-952d-447d-aed2-26ea11349a86</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Mina Bibawi</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="Sentence Adder" />
  <Description DefaultValue="A simple add-in to insert a sentence into Word using a dialog." />

  <IconUrl DefaultValue="https://mbibawi.github.io/ContractsPWA/assets/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://mbibawi.github.io/ContractsPWA/assets/icon-64.png" />
  <SupportUrl DefaultValue="https://mbibawi.github.io/ContractsPWA/help" />

  <AppDomains>
    <AppDomain>https://mbibawi.github.io</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Word" />
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="WordApi" MinVersion="1.3" />
    </Sets>
  </Requirements>

  <!-- 2. Fallback for Clients That Donâ€™t Understand VersionOverrides -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://mbibawi.github.io/ContractsPWA/taskpane.html" />
  </DefaultSettings>

  <!-- 3. New-style Overrides with Ribbon Commands & Dialog -->
  <VersionOverrides
    xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
    xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="WordHost">
        <DesktopFormFactor>

          <ExtensionPoint xsi:type="ShowTaskpane">
            <OfficeTab id="TabHome">
              <Group id="SentenceGroup" label="Sentence Adder">

                <Control xsi:type="Button" id="ShowPaneButton">
                  <Label resid="paneLabel" />
                  <Supertip>
                    <Title resid="paneLabel" />
                    <Description resid="paneDesc" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="144" resid="icon144" />
                    <bt:Image size="256" resid="icon256" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="taskpaneUrl" />
                  </Action>
                </Control>

                <Control xsi:type="Button" id="LaunchDialogButton">
                  <Label resid="dialogLabel" />
                  <Supertip>
                    <Title resid="dialogLabel" />
                    <Description resid="dialogDesc" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="144" resid="icon144" />
                    <bt:Image size="256" resid="icon256" />
                  </Icon>
                  <Action xsi:type="LaunchDialog">
                    <SourceLocation resid="dialogUrl" />
                    <Height>50%</Height>
                    <Width>50%</Width>
                  </Action>
                </Control>

              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>

      <bt:Urls>
        <bt:Url id="taskpaneUrl"
                DefaultValue="https://mbibawi.github.io/ContractsPWA/taskpane.html" />
        <bt:Url id="dialogUrl"
                DefaultValue="https://mbibawi.github.io/ContractsPWA/dialog.html" />
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="paneLabel"   DefaultValue="Open Sentence Pane" />
        <bt:String id="paneDesc"    DefaultValue="Insert or edit a sentence" />
        <bt:String id="dialogLabel" DefaultValue="Open Sentence Dialog" />
        <bt:String id="dialogDesc"  DefaultValue="Add a sentence via dialog" />
      </bt:ShortStrings>

      <bt:Images>
        <bt:Image id="icon144"
                  DefaultValue="https://mbibawi.github.io/ContractsPWA/assets/icon-144.png" />
        <bt:Image id="icon256"
                  DefaultValue="https://mbibawi.github.io/ContractsPWA/assets/icon-256.png" />
      </bt:Images>

    </Resources>
  </VersionOverrides>
</OfficeApp>